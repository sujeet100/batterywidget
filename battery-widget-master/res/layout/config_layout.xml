<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat" >

    <SeekBar
        android:id="@+id/warningLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/warnPerc" />

    <TextView
        android:id="@+id/criticalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/warningLevel"
        android:layout_marginTop="14dp"
        android:text="Show critical warning at"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFF0000" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/criticalLevel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp"
        android:text="Done" />

    <TextView
        android:id="@+id/warningLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Show warning at"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFF9900" />

    <TextView
        android:id="@+id/warnPerc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/warningLevel" />

    <SeekBar
        android:id="@+id/criticalLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/criticalLabel"
        android:layout_toLeftOf="@+id/critPerc" />

    <TextView
        android:id="@+id/critPerc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/criticalLevel"
        android:layout_alignParentRight="true" />

</RelativeLayout>
